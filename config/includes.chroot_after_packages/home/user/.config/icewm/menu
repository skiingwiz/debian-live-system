# This is an example for IceWM's menu definition file.

prog "Debian Jr. Info" ! zenity --info --text "Debian Jr."
prog "Debian Jr." ! xdg-open ~/README.txt
prog "Web Browser" ! x-www-browser
prog "Chat" im.dino.Dino dino-im

separator
menu Applications folder {
    menu Editors folder {
        prog "Mousepad" org.xfce.mousepad mousepad
    }
    menu "Mail Agents" folder {
	prog claws-mail claws-mail claws-mail
    }
    menu "WWW Browsers" folder {
        prog "Web Browser" ! x-www-browser
    }
    menu "Player" folder {
        prog "Parole-Medienspieler" org.xfce.parole parole
        prog "VLC Media Player" vlc icewm-menu-fdo "/usr/share/applications/vlc.desktop"
    }
    menu "Kids" folder {
        prog "GCompris" gcompris-qt gcompris-qt
    }

